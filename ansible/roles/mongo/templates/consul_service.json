{
    "service": {
        "name": "{{ inventory_hostname|regex_replace('\d+', '') }}",
        "id": "{{ inventory_hostname }}",
        "tags": [
            "db"
        ],
        "port": 27017,
        "checks": [{
            "id": "mongo-ping",
            "http": "http://{{ ansible_ssh_host }}:5579/db_check/mongo",
            "interval": "15s"
        }]
    }
}  
